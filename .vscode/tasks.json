{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Qwik Build",
			"dependsOn": [
				"build.types",
				"build.client",
				"build.server"
				// npm run lint
			],
			"dependsOrder": "sequence",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "build.types",
			"detail": "tsc --incremental --noEmit --watch",
			"type": "npm",
			"script": "build.types:watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"group": "compile"
			}
		},
		{
			"label": "build.client",
			"detail": "vite build --watch",
			"type": "npm",
			"script": "build.client:watch",
			"problemMatcher": {
				"owner": "vite",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^built in \\d+ms\\.$",
					"file": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^> build\\.preview",
					"endsPattern": "^built in \\d+ms\\.$"
				}
			},
			"isBackground": true,
			"presentation": {
				"group": "compile"
			}
		},
		{
			"label": "build.server",
			"detail": "vite build -c adapters/cloudflare-pages/vite.config.ts --watch",
			"type": "npm",
			"script": "build.server:watch",
			"problemMatcher": {
				"owner": "vite",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^built in \\d+ms\\.$",
					"file": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^> build\\.server",
					"endsPattern": "^built in \\d+ms\\.$"
				}
			},
			"isBackground": true,
			"presentation": {
				"group": "compile"
			}
		}
	]
}
