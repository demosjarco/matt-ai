{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"dependsOn": ["TypeChat Types", "TypeChat Compile", "Qwik Types", "Qwik Client", "Qwik Server", "Qwik Lint"],
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "TypeChat Types",
			"type": "typescript",
			"tsconfig": "worker/aiTypes/tsconfig.json",
			"option": "watch",
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true,
			"presentation": {
				"group": "worker.compile"
			},
			"options": {
				"cwd": "${workspaceFolder}/worker/aiTypes"
			},
			"icon": {
				"id": "symbol-type-parameter",
				"color": "terminal.ansiBlue"
			}
		},
		{
			"label": "TypeChat Compile",
			"dependsOn": ["TypeChat Types"],
			"type": "npm",
			"script": "build",
			"path": "${workspaceFolder}/worker",
			"presentation": {
				"group": "worker.compile"
			},
			"options": {
				"cwd": "${workspaceFolder}/worker"
			},
			"icon": {
				"id": "json",
				"color": "terminal.ansiYellow"
			}
		},
		{
			"label": "Qwik Types",
			"type": "typescript",
			"tsconfig": "pages/tsconfig.json",
			"option": "watch",
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true,
			"presentation": {
				"group": "pages.compile"
			},
			"options": {
				"cwd": "${workspaceFolder}/pages"
			},
			"icon": {
				"id": "symbol-type-parameter",
				"color": "terminal.ansiBlue"
			}
		},
		{
			"label": "Qwik Client",
			"detail": "vite build",
			"type": "npm",
			"script": "build.client",
			"presentation": {
				"group": "pages.compile"
			},
			"options": {
				"cwd": "${workspaceFolder}/pages"
			},
			"icon": {
				"id": "browser",
				"color": "terminal.ansiYellow"
			}
		},
		{
			"label": "Qwik Server",
			"detail": "vite build -c adapters/cloudflare-pages/vite.config.ts",
			"dependsOn": ["Qwik Client"],
			"type": "npm",
			"script": "build.server",
			"presentation": {
				"group": "pages.compile"
			},
			"options": {
				"cwd": "${workspaceFolder}/pages"
			},
			"icon": {
				"id": "server-process"
			}
		},
		{
			"label": "Qwik Lint",
			"dependsOn": ["Qwik Client", "Qwik Server"],
			"type": "npm",
			"script": "lint:fix",
			"problemMatcher": "$eslint-stylish",
			"presentation": {
				"group": "pages.compile"
			},
			"options": {
				"cwd": "${workspaceFolder}/pages"
			},
			"icon": {
				"id": "lightbulb-autofix",
				"color": "terminal.ansiGreen"
			}
		}
	]
}
