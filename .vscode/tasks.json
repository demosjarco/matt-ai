{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"dependsOn": ["Lint", "Qwik Types", "Qwik Client", "Qwik Server", "LoRA Retrainer Types"],
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Lint",
			"type": "npm",
			"script": "lint:fix",
			"problemMatcher": "$eslint-stylish",
			"icon": {
				"id": "lightbulb-autofix",
				"color": "terminal.ansiGreen"
			}
		},
		{
			"label": "Qwik Types",
			"type": "typescript",
			"tsconfig": "pages/tsconfig.json",
			"option": "watch",
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true,
			"presentation": {
				"group": "pages.compile"
			},
			"options": {
				"cwd": "${workspaceFolder}/pages"
			},
			"icon": {
				"id": "symbol-type-parameter",
				"color": "terminal.ansiBlue"
			}
		},
		{
			"label": "Qwik Client",
			"type": "npm",
			"script": "build.client",
			"presentation": {
				"group": "pages.compile"
			},
			"options": {
				"cwd": "${workspaceFolder}/pages"
			},
			"icon": {
				"id": "browser",
				"color": "terminal.ansiYellow"
			}
		},
		{
			"label": "Qwik Server",
			"dependsOn": ["Qwik Client"],
			"type": "npm",
			"script": "build.server",
			"presentation": {
				"group": "pages.compile"
			},
			"options": {
				"cwd": "${workspaceFolder}/pages"
			},
			"icon": {
				"id": "server-process"
			}
		},
		{
			"label": "LoRA Retrainer Types",
			"type": "typescript",
			"tsconfig": "lora-retrainer/tsconfig.json",
			"option": "watch",
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true,
			"presentation": {
				"group": "lora-retrainer.compile"
			},
			"options": {
				"cwd": "${workspaceFolder}/lora-retrainer"
			},
			"icon": {
				"id": "symbol-type-parameter",
				"color": "terminal.ansiBlue"
			}
		}
	]
}
