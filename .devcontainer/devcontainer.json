// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "Node.js",
	"build": {
		// Path is relative to the devcontainer.json file.
		"dockerfile": "Dockerfile"
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"configureZshAsDefaultShell": true,
			"installOhMyZsh": true,
			"installOhMyZshConfig": true,
			"upgradePackages": true,
			"username": "node",
			"nonFreePackages": true
		},
		"ghcr.io/devcontainers/features/git:1": {
			"version": "latest",
			"ppa": "false"
		},
		"ghcr.io/devcontainers/features/github-cli:1": {
			"version": "latest",
			"installDirectlyFromGitHubRelease": true
		},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "none",
			"nodeGypDependencies": false,
			"nvmVersion": "latest"
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [11412],
	"portsAttributes": {
		"11412": {
			"elevateIfNeeded": true,
			"label": "Pages",
			"onAutoForward": "notify",
			"protocol": "http"
		}
	},

	// https://containers.dev/implementors/spec/#parallel-exec
	// "onCreateCommand": {},
	"updateContentCommand": {
		"updateCode": "git fetch && git pull --ff-only || git status"
	},
	"postCreateCommand": {
		"fixMountPermissions": ["sudo", "chown", "-R", "node", "node_modules"],
		"setupPackages": ["npm", "ci", "--include-workspace-root", "--workspaces"]
	},
	"postStartCommand": {
		"updateCode": "git fetch && git pull --ff-only || git status"
	},
	// "postAttachCommand": {},

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": ["dbaeumer.vscode-eslint", "esbenp.prettier-vscode", "github.vscode-github-actions", "unifiedjs.vscode-mdx", "redhat.vscode-yaml", "github.codespaces", "bradlc.vscode-tailwindcss"]
		}
	},

	"mounts": ["source=${localWorkspaceFolderBasename}-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume"],

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "node"
}
