{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"incremental": true,
		"lib": ["ESNext", "DOM", "WebWorker", "DOM.Iterable"],
		"jsx": "react-jsx",
		"jsxImportSource": "@builder.io/qwik",
		"moduleResolution": "Node",
		"paths": {
			"~/*": ["./src/*"]
		},
		"types": ["@cloudflare/workers-types/experimental", "turnstile-types", "vite/client"],
		"inlineSourceMap": true,
		"outDir": "tmp"
	},
	"files": ["./.eslintrc.cjs", "./prettier.config.mjs", "./postcss.config.cjs", "./tailwind.config.cjs"],
	"include": ["src", "adapters", "./*.d.ts", "./*.config.ts"]
}
